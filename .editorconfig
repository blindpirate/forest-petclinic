# http://editorconfig.org
root = true

[*.{kt,kts}]
disabled_rules=import-ordering

[*.java]
end_of_line = lf
insert_final_newline = true
align_multiline_chained_methods = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
